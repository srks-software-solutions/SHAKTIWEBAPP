@model IEnumerable<SRKSDemo.Server_Model.sidebar_menus>
    @{
        ViewBag.Title = "Sub Menus";
        Layout = "~/Views/Shared/_LayoutForRole.cshtml";
    }

    <div class="container body">
        <div class="main_container">
            <div class="right_col" role="main">
                <div class="">
                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title" style="background: #005d9a;z-index: 9999999999;padding: 24px;">
                                    <h2 style="margin-top: -13px;">Sub Menu</h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                        <li>
                                            <a class="collapse-link" style="margin-top: -20px;"><i class="fa fa-chevron-up"></i></a>
                                        </li>

                                    </ul>
                                </div>
                                <div class="clear-fix"></div>
                                <div class="x_content">
                                    @using (Html.BeginForm("CreateSubMenus", "Menu", null, FormMethod.Get, new { @class = "form-horizontal form-label-left" }))
                                    {
                                        <label class="col-sm-1 control-label" style="font-size: large;padding-top:0px">Menus</label>
                                        <div class="col-sm-7">
                                            @Html.DropDownList("Menus", null, "--Select Menu--", new { @id = "selectMenus", @class = "form-control", @name = "Menus", @style = "aria-expanded:false;", @required = "required", @value = ViewData["Menus"], @onchange = "enable();" })
                                        </div>
                                        <div class="col-sm-4">
                                            <button type="submit" class="btn btn-primary btn-sm" style="height:33px;" id="btnSubmit" disabled> <i class="fa fa-dot-circle-o"></i> Add SubMenu</button>
                                        </div>
                                    }
                                    <div class="clear-fix SubMenus">
                                        @*<div class="" style="margin-top: 35px;">
                                                <div class="x_content">
                                                    <table id="datatable-fixed-header" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width:"100%">
                                                        <thead>
                                                            <tr>
                                                                <th>SubMenu Name</th>
                                                                <th>SubMenu URL</th>
                                                                <th>Action</th>
                                                            </tr>
                                                        </thead>
                                                    </table>
                                                </div>
                                            </div>*@
                                        <!-- Delete Modal Begin -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/vendors/jquery/dist/jquery.min.js"></script>
    <script src="~/Scripts/MCAdmin/MenuConfiguration.js"></script>

    <script>
    function enable() {
        var userId = $('#selectMenus').val();
        if (userId != 0) {
            $("#btnSubmit").removeAttr('disabled', 'disabled');
        }
        else {
            $("#btnSubmit").attr('disabled', 'disabled');
        }
    }
    </script>

    <script>

    function deleteTargetName(item_to_delete) {
        $(".deleteTargetName").empty();
        $(".alert-danger11").html("SubMenuName: " +
            item_to_delete);
    }

    var item_to_delete;
    $(".deleteItem").click(function (e) {
        item_to_delete = $(this).data('id');
    });
    $('.btnContinueDelete').click(function () {
        window.location = "/Menu/Delete/" + "?id=" + item_to_delete;
    });

    </script>
